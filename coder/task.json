{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "cppbuild",
            "label": "Build C file",
            "command": "P A T H   T O   Y O U R   C O M P I L E R",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "fileOperations.c",
                "treeOperations.c",
                "main.c",
                "-o",
                "${fileDirname}\\Coder.exe"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build",
            "detail": "Compile files into an executable program."
        }
    ]
}
