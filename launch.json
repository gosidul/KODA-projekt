{
    "configurations": [
        {
            "name": "BUILD AND DEBUG",
            "type": "cppdbg",
            "request": "launch",
            "program": "${fileDirname}\\Coder.exe",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${fileDirname}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "miDebuggerPath": "P A T H   T O   Y O U R   D E B U G E R",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                },
                {
                    "description": "Set Disassembly Flavor to Intel",
                    "text": "-gdb-set disassembly-flavor intel",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "Build C file"
        }
    ],
    "version": "2.0.0"
}
